<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="forecast"
            type="com.testapp.weather.model.ForecastItem"/>
        <variable
            name="onForecastClickListener"
            type="com.testapp.weather.adapter.ForecastAdapter.OnForecastClickListener"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        app:actionClick="@{ClickAction.PROFILE}"
        app:handler="@{actionHandler.onActionClick}"
        app:model="@{user}">

        <ImageView
            android:id="@+id/ivUserAvatar_RMTP"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="16dp"
            android:src="@drawable/avatar_placeholder"
            app:glideDefault="@{@drawable/avatar_placeholder}"
            app:glideImage="@{user.userAvatarThumb}"
            app:glidePlaceholder="@{@drawable/avatar_placeholder}"
            app:glideTransform='@{"CIRCLE"}'
            app:glideUseDrawableAsPlaceholder="@{true}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="72dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{user.userFullname}"
                android:textColor="@android:color/black"
                tools:text="Jenna Tester"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text='@{"@" + user.username}'
                tools:text="\@username"/>
        </LinearLayout>

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical|right"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:gravity="center"-->
        <!--android:singleLine="true"-->
        <!--android:ellipsize="end"-->
        <!--android:ems="3"-->
        <!--android:text="@{hashTag.tagcount}"-->
        <!--tools:text="25"/>-->

    </FrameLayout>
</layout>